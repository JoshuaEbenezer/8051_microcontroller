// find if a string is Palindrome

		ORG 8100H
		
		MOV DPTR,#9000H
		MOV P2,#91H
		MOV R0,#00H
		MOV R1,#20H
		MOVC A,@A+DPTR
LOOP:	MOVX @R0,A
		INC R0
		INC DPTR
		CLR A
		MOVC A,@A+DPTR
		CJNE A,#0H,LOOP
MOVE:	DEC R0
		MOVX A,@R0
		MOVX @R1,A
		INC R1
		CJNE R0,#20H,MOVE
COMPARE:MOVX A,@R0
		MOV R2,A
		MOVX A,@R1
		INC R0
		INC R1
		CJNE R2,#00H,COMPARE
		MOV B,R2
		CJNE A,B,NO
		SJMP YES
NO:		CLR A
		SJMP STORE
YES:	MOV A,#1H
STORE:	MOV DPTR,#9500H
		MOVX @DPTR,A	
		END
